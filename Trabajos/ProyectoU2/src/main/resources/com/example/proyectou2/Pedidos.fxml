<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectou2.PedidosController">
   <center>
      <VBox prefHeight="500.0" prefWidth="900.0">
         <children>
            <TableView prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </center>
   <top>
      <HBox prefHeight="60.0" prefWidth="600.0" style="-fx-background-color: #010924;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Panaderia La Sabrosa" textFill="WHITE">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Label text="Usuario tal:" textFill="WHITE">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox prefHeight="500.0" prefWidth="298.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Agregar pedido" />
            <TextField prefHeight="35.0" promptText="Nombre" />
            <TextField prefHeight="35.0" promptText="Productos" />
            <TextField prefHeight="35.0" promptText="Fecha de inicio" />
            <Button mnemonicParsing="false" text="Insertar pedido" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
